<div class="section__circle-container mdl-cell mdl-cell--1-col mdl-cell--2-col-phone center-this">
  <!-- answer count goes here -->
  <i class="material-icons mdl-badge mdl-badge--overlap mdl-list__item-icon question-badge" data-badge="<%= topic.questions.count %>">folder</i>
  <% if logged_in? and current_user.permission? :topic_manage %>
    <div class = "admin-buttons">
      <%= link_to topic, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="material-icons question-button">delete</i>
      <% end %>
    </div>
  <% end %>
</div>
<div class="section__text answer__text mdl-cell mdl-cell--11-col-desktop mdl-cell--7-col-tablet mdl-cell--4-col-phone">
  <div class="question-title"><a href="<%= topic_path topic %>"><%= topic.title %></a></div>
  <small>Created <%= time_ago_in_words(topic.created_at) %> ago</small>
  </br>
  <% if topic.questions.any? %>
    <small>Last question asked <%= time_ago_in_words topic.questions.last.created_at %> ago.</small>
  <% else %>
    <small>No questions asked yet.</small>
  <% end %>
</div>