<%= form_for(topic) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="mdl-card__supporting-text">
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label fullwidth">
      <div>
        <%= f.label :title, :class => 'mdl-textfield__label' %>
        <%= f.text_field :title, class: 'form-control mdl-textfield__input' %>
      </div>
    </div>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <%= f.submit "Create Topic", :class => 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent'%>
  </div>
<% end %>