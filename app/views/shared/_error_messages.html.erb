<% if object.errors.any? %>
  <div class="mdl-grid">
    <!--id="error_explanation" or maybe it was a class... idk-->
    <div class="mdl-cell mdl-cell--2-col mdl-cell--hide-tablet mdl-cell--hide-phone"></div>
    <div class="mdl-cell mdl-cell--8-col mdl-shadow--4dp warning-title">
      <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">You must correct <%= pluralize(object.errors.count, "field") %>:</h2>
      </div>
      <ul>
      <% object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>