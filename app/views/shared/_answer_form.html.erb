<%= form_for(@new_answer) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= hidden_field_tag :question_id, @question.id %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose a new answer..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>