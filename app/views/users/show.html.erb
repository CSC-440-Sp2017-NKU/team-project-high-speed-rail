<section class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp question-section mdl-cell--8-col mdl-cell--6-col-tablet">
  <div class="mdl-cell mdl-cell--12-col mdl-shadow--4dp mdl-card">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text"><%= @user.name %></h2>
    </div>

    <div class="mdl-card__supporting-text">
        <% @ourUser = @user.recent_activity %>
        <% @ourUser.each do |results| %>
            <% if results.is_a? Question %>
                <p><small><%= results.created_at %></small></br>Asked <%= results.title %> <% if results.topic %> on <%= results.topic.title %> <% end %></p>
            <% end %>
            <% if results.is_a? Answer %>
                <p><small><%= results.created_at %></small></br> Submited answer for <%= results.question.title %> <% if results.question.topic %> on <%= results.question.topic.title %> <% end %></p>
            <% end %>
        <% end %>
    </div>

  </div>
</section>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
